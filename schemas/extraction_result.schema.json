{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:ieim:schema:extraction-result:1.0.0",
  "title": "ExtractionResult",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "message_id",
    "run_id",
    "entities",
    "created_at"
  ],
  "properties": {
    "schema_id": { "const": "urn:ieim:schema:extraction-result:1.0.0" },
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },

    "message_id": { "type": "string", "minLength": 16 },
    "run_id": { "type": "string", "minLength": 16 },

    "entities": {
      "type": "array",
      "items": { "$ref": "#/$defs/entity" }
    },

    "created_at": { "type": "string", "format": "date-time" }
  },
  "$defs": {
    "sha256_ref": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source", "start", "end", "snippet_redacted", "snippet_sha256"],
      "properties": {
        "source": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
        "attachment_id": { "type": ["string", "null"], "minLength": 0 },
        "start": { "type": "integer", "minimum": 0 },
        "end": { "type": "integer", "minimum": 0 },
        "snippet_redacted": { "type": "string", "maxLength": 400 },
        "snippet_sha256": { "$ref": "#/$defs/sha256_ref" }
      }
    },
    "entity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["entity_type", "confidence", "provenance"],
      "properties": {
        "entity_type": { "type": "string", "pattern": "^ENT_[A-Z0-9_]+$" },
        "value": { "type": ["string", "null"] },
        "value_redacted": { "type": ["string", "null"] },
        "value_sha256": { "type": ["string", "null"], "pattern": "^(sha256:[0-9a-f]{64})?$" },
        "store_mode": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
        "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "provenance": { "$ref": "#/$defs/provenance" }
      }
    }
  }
}
