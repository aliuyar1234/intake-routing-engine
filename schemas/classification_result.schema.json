{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "urn:ieim:schema:classification-result:1.0.0",
  "title": "ClassificationResult",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_id",
    "schema_version",
    "message_id",
    "run_id",
    "intents",
    "primary_intent",
    "product_line",
    "urgency",
    "risk_flags",
    "created_at",
    "decision_hash"
  ],
  "properties": {
    "schema_id": { "const": "urn:ieim:schema:classification-result:1.0.0" },
    "schema_version": { "type": "string", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" },

    "message_id": { "type": "string", "minLength": 16 },
    "run_id": { "type": "string", "minLength": 16 },

    "intents": {
      "type": "array",
      "items": { "$ref": "#/$defs/labeled_confidence" }
    },
    "primary_intent": { "$ref": "#/$defs/labeled_confidence" },

    "product_line": { "$ref": "#/$defs/labeled_confidence" },
    "urgency": { "$ref": "#/$defs/labeled_confidence" },

    "risk_flags": {
      "type": "array",
      "items": { "$ref": "#/$defs/labeled_confidence" }
    },

    "model_info": { "type": ["object", "null"] },

    "created_at": { "type": "string", "format": "date-time" },
    "decision_hash": { "$ref": "#/$defs/sha256_ref" }
  },
  "$defs": {
    "sha256_ref": {
      "type": "string",
      "pattern": "^sha256:[0-9a-f]{64}$"
    },
    "evidence_span": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source", "start", "end", "snippet_redacted", "snippet_sha256"],
      "properties": {
        "source": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
        "start": { "type": "integer", "minimum": 0 },
        "end": { "type": "integer", "minimum": 0 },
        "snippet_redacted": { "type": "string", "maxLength": 400 },
        "snippet_sha256": { "$ref": "#/$defs/sha256_ref" }
      }
    },
    "labeled_confidence": {
      "type": "object",
      "additionalProperties": false,
      "required": ["label", "confidence", "evidence"],
      "properties": {
        "label": { "type": "string", "pattern": "^[A-Z0-9_]+$" },
        "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
        "evidence": {
          "type": "array",
          "items": { "$ref": "#/$defs/evidence_span" }
        }
      }
    }
  }
}
